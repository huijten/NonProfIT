@model IEnumerable<NonProfIT.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">

                @if (item.Available)
                {
                    <span class="float-lg-end m-2 badge bg-success">Available</span>
                }
                else
                {
                    <span class="float-lg-end m-2 badge bg-danger">Unavailable</span>
                }
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">$ @item.Compensation</h6>
                <p class="card-text">@item.Description.Substring(0,90)... <a href="#" class="card-link">Lees meer</a></p>
                @if (item.Available)
                {
                    <a href="#" class="btn btn-sm btn-dark">Aanmelden</a>
                    <a href="#" class="btn btn-sm btn-outline-dark">Meer info</a>
                }
                else
                {
                    <h6 class="card-subtitle text-muted">Uitgevoerd door:</h6>
                    <h6 class="fw-bold">@item.Student.FirstName @item.Student.LastName</h6>
                }
            </div>
        </div>
    }
</div>